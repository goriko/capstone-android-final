<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinNumberActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/emailver_blurredbckgrnd" />

    <ImageView
        android:id="@+id/cabshareLogo_pin"
        android:layout_width="wrap_content"
        android:layout_height="82px"
        android:src= "@drawable/emailver_cabshare"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"

        />

    <ImageView
        android:id="@+id/Logo_pin"
        android:layout_width="wrap_content"
        android:layout_height="280px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pinnum_logo" />



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_fin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/textViewPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Enter your desired pin."
                android:textColor="#ffffff"

                />

            <com.goodiebag.pinview.Pinview
                android:id="@+id/pinView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:pinWidth="40dp"
                app:pinHeight="40dp"
                app:pinLength="4"
                app:cursorVisible="true"
                app:inputType="number"
                app:password="true"/>


            <Button
                android:id="@+id/buttonProceed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/yellow_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Proceed"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/emailver_blurredbckgrnd" />

    <ImageView
        android:id="@+id/cabshareLogo"
        android:layout_width="wrap_content"
        android:layout_height="82px"
        android:src= "@drawable/emailver_cabshare"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="280px"
        android:layout_marginTop="10dp"
        android:src= "@drawable/emailver_icon"
        android:scaleType="fitCenter"
        android:layout_below="@id/cabshareLogo"
        android:id="@+id/Logo"/>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_fin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"



            >



            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:hint="Enter your email address"
                android:paddingStart="10dp"
                android:textColorHighlight="@android:color/background_light"
                android:textSize="14sp"
                android:textColor="#ffffff"
                tools:textColorHint="@color/white" />

                />


            <Button
                android:id="@+id/buttonReset"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/yellow_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="reset password"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>